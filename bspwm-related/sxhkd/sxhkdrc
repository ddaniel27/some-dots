#
# wm independent hotkeys
#

# terminal emulator
super + Return
	kitty

# program launcher
super + @space
	rofi -show drun

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }w
	bspc node -{c,k}

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

super + {_,shift + }b
	/home/ddaniel27/.local/bin/myscripts/lapav {hide,show};
#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# focus the next/previous window in the current desktop
super + {_,shift + }c
	bspc node -d {next,prev};

# focus the next/previous desktop in the current monitor
# super + bracket{left,right}
# 	bspc desktop -f {prev,next}.local
super + bracket{left,right}
	bspc desktop --swap {prev,next};
super + shift + bracket{left,right}
	bspc desktop --focus {prev,next};


#
# move/resize
#

# expand a window by moving one of its side outward
super + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# contract a window by moving one of its side inward
super + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# Open browser
super + r
	brave

# Take a screenshot and save in clipboard
super + shift + s
	/home/ddaniel27/.local/bin/myscripts/screenshot

# Change theme
super + shift + x
	/home/ddaniel27/.local/bin/myscripts/change-theme


# suspend
super + BackSpace
	systemctl suspend


# Volume manager
super + p
	kitty pulsemixer

XF86AudioLowerVolume
	pactl set-sink-volume @DEFAULT_SINK@ -2%

XF86AudioRaiseVolume 
	pactl set-sink-volume @DEFAULT_SINK@ +2%
